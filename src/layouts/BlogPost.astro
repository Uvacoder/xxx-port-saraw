---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
		caption?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage, caption },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
  				border-top: 1px solid #DDD;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article class="blogpost">
				{heroImage && (
					<img
						src={heroImage}
						alt={caption}
					/>
					<p class="caption">{caption}</p>
				)}
				<h1 class="title">{title}</h1>
				{pubDate && <time>{pubDate}</time>}
				{updatedDate && <div>Last updated on <time>{updatedDate}</time></div>}
				<hr/>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		background-color: var(--header);
		padding: 3vmin;
		margin-top: var(--tabheight);
	}
	article {
		max-width: 60ch;
		margin: 0 auto;
	}
	img {
		display: block;
		margin: 0 auto;
		max-width: 100%;
		max-height: 25rem;
		border-radius: var(--border-radii);
	}
	.blogpost :global(.caption) {
		text-align: center;
		font-style: italic;
		margin-bottom: 3vmin;
	}
</style>