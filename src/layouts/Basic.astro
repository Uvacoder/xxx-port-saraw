---
import BaseHead from "../components/BaseHead.astro";
import BasicHeader from "../components/BasicHeader.astro";
import Toggle from "../components/Toggle.astro";

import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

const {
	title = SITE_TITLE, description = SITE_DESCRIPTION, image = "/images/cartoon.png", page, noFancy
} = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead {title} {description} {image} />
	</head>
	<body>
    <BasicHeader />
    <main class={page}>
      {page === "home" && 
      <img id="avatar-big" src="/images/cartoon.png" alt="avatar">}
      {!noFancy && <h1 class="fancy">{title}</h1>}
      <slot />
    </main>
    <footer></footer>
  </body>
</html>